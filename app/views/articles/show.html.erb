<h1><%= @article.title %></h1>

<p><%= @article.body %></p>


<h2>Comments</h2>
<%= render @article.comments %>



<h2>Add a comment:</h2>
<%= render 'comments/form' %>


<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= button_to "Destroy", article_path, method: :delete, form: { data: {turbo_confirm: "Are you sure?"}} %></li>
  <li><%= link_to "Back to index", root_path %></li>
</ul>